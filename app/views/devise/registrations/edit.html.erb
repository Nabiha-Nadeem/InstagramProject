<div class="main-form">
  <div class="container">
    <div class="text-left">
      <div class="box-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


          <div class="form-group">
            <%= image_tag(current_user.avatar, class: "image-edit") %>
            <a class="form-fullname"><%= current_user.fullname %></a>
          </div>

          <div class="form-group">
            <span class="form-header"> Change Profile Photo </span>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>

          <div class="form-group">
            <span class="form-header"> Email </span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
          </div>

          <div class="form-group">
            <span class="form-header"> Bio </span>
            <%= f.text_field :bio, autofocus: true, class: "form-control"%>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <span class="form-header"> New Password </span>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <span class="form-header"> Confirm New Password </span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <span class="form-header"> Old Password </span>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="field">
            <span class="form-header"> Private Account? </span>
            <%= f.check_box :is_private, autocomplete: "is_private" %>
          </div>

          <div class="field">
            <%= f.hidden_field :type, value: 'Account' %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>


        <% end %>

        <br>

        <span class="form-header"> Delete account? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" },
                        method: :delete, class: "btn btn-primary" %>
        </span>

      </div>
    </div>
  </div>
</div>
