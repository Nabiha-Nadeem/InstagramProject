<div class="edit-post text-center">
  <%= form_for :comment, { :url => post_comment_path(@post, @comment), :method => :patch } do |f| %>
    <%= f.label :body, class: "control-label" %>
    <%= f.text_field :body, class: "text_field", required: true, pattern: "^[^-\s][a-zA-Z0-9_\s-]+$",
                     title: "First character can not be a space!" %>
    <%= f.submit "Update", class: "btn" %>
  <% end %>
</div>
