<div class="add-story-box">
  <button class="btn fa-solid fa-circle-plus" data-toggle="modal" data-target="#addStoryModal"></button>
  <% @users_with_story.each do |user| %>
    <% if current_user.following.include?(user) or user == current_user %>
      <%= link_to image_tag(user.avatar_thumbnail, class: "story-avatar"), story_path(user.id) ,class: "btn" %>
    <% end %>
  <% end %>
</div>

<div class="modal fade" id="addStoryModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="list-group text-center customModal">
        <div class="modal-box">
          <%= form_for @story, :html => {:multipart => true} do |f| %>
            <%= file_field_tag "image", type: :file %>
            <%= f.submit "Submit", class: "btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>